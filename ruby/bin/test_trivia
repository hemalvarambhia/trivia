#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib')

require 'ugly_trivia/game'

not_a_winner = false

game =
  UglyTrivia::Game.new(
    deck_of_questions: UglyTrivia::DeckOfQuestions.new,
    commentary: UglyTrivia::StdOutBasedGameCommentator.new
  )

game.add 'Chet'
game.add 'Pat'
game.add 'Sue'

random = Random.new(7777)
begin
  game.roll(random.rand(5) + 1)
  
  if random.rand(9) == 7
    not_a_winner = game.wrong_answer
  else
    not_a_winner = game.was_correctly_answered
  end
  
  
  
end while not_a_winner
